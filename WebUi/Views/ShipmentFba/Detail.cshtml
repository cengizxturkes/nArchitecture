@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}
@using Application.Features.Orders.Dtos;
@using Domain.Entities
@model OrderViewModel
<html>
<body>
<div class="app-content main-content">
<div class="side-app main-container">

			<div class="row">
				<div class="col-sm-12">
					<table class="table table-vcenter text-nowrap table-bordered border-bottom dataTable no-footer" id="role-list" role="grid" aria-describedby="role-list_info">
						<thead>
							<tr role="row">
								<th class="border-bottom-0 w-5 sorting_disabled">ID</th>
								<th class="border-bottom-0 sorting sorting_desc">Asin</th>
								<th class="border-bottom-0 text-center sorting" >Product Name</th>
								<th class="border-bottom-0 text-center sorting" >Location</th>
								<th class="border-bottom-0 text-center sorting" >Price</th>
								<th class="border-bottom-0 text-center sorting" >Weight</th>
								<th class="border-bottom-0 text-center sorting" >Height</th>
								<th class="border-bottom-0 text-center sorting" >Quantity</th>
								<th class="border-bottom-0 text-center sorting" >Actions</th>


							</tr>
						</thead>
						<tbody>























                             @foreach (var item in (List<Product>)ViewBag.OrdersProduct)
                    {

							<tr class="odd">
								<td>@item.Id</td>
								<td class="sorting_1">@item.AsinCode</td>
                                    <td class="sorting_1">@item.Name</td>
                                    <td class="sorting_1">Usa</td>
                                    <td class="sorting_1">@item.TotalPrice</td>
                                    <td class="sorting_1">@item.Weight</td>
                                    <td class="sorting_1">@item.Height</td>
                                    <td class="sorting_1">@item.ExpectedStockAmount</td>
                                    <td class="sorting_1">Ordered</td>


                                </tr>
                            }
						
						</tbody>
					</table>
				</div>
			</div>
</div>
</div>

</body>
</html>